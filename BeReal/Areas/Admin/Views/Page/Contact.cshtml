@model PageViewModel
@{
    ViewData["Title"] = "Contact Page";
    await Html.RenderPartialAsync("_Navbar");
}
<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Post"><i class="fa-solid fa-arrow-left"></i></a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Edit Page</h4>
        </div>
        <div class="card-body">
            <form asp-action="Contact" asp-controller="Page" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row mb-2">
                    <div class="mb-2">
                        <label>Title</label>
                        <input asp-for="Title" type="text" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label>Short Description</label>
                        <input asp-for="ShortDescription" type="text" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label>Description</label>
                        <textarea asp-for="Description" class="form-control" rows="8" id="editor"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </form>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_Footer");
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}