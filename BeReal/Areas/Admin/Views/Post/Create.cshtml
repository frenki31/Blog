@model CreatePostViewModel
@{
    ViewData["Title"] = "Create Post";
    await Html.RenderPartialAsync("_Navbar");
}
<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Post"><i class="fa-solid fa-arrow-left"></i></a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Create Post</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Post" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="row mb-2">
                    <div class="col-8">
                        <div class="mb-2">
                            <label>Title<span style="color:red">*</span></label>
                            <input asp-for="Title" type="text" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label>Short Description<span style="color:red">*</span></label>
                            <input asp-for="ShortDescription" type="text" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label>Category<span style="color:red">*</span></label>
                            <input asp-for="Category" type="text" id="myTextField" class="form-control" readonly>
                            @foreach (var category in Model.Categories!.Where(X => X.ParentCategory != null))
                            {
                                <label><input type="checkbox" class="myCheckbox" value="@category.ParentCategory!.Name/@category.Name">@category.Name</label>
                            }
                        </div>
                        <div class="mb-2">
                            <label>Tags</label>
                            <input asp-for="Tags" type="text" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label>Description</label>
                            <textarea asp-for="Description" class="form-control" rows="8" id="editor"></textarea>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            <img src="~/images/default_image.png" class="img-fluid" id="thumbnail">
                        </div>
                        <div class="mb-2">
                            <label>Image</label>
                            <input asp-for="Image" type="file" class="custom-file" />
                        </div>
                        <div class="mb-2">
                            <label>Document</label>
                            <input asp-for="File!.UploadedFile" type="file"  />
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </form>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_Footer");
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('.custom-file').on('change', function () {
            var fileName = $(this).val().split('\\').pop();
            $(this).siblings('.custom-file-label').addClass('selected').html(fileName);
            document.getElementById("thumbnail").src = window.URL.createObjectURL(this.files[0])
        });
        
        var checkboxes = document.getElementsByClassName('myCheckbox');
        for (var i = 0; i < checkboxes.length; i++) {
            checkboxes[i].addEventListener('change', function () {
                if (this.checked) {
                    document.getElementById('myTextField').value += ' ' + this.value;
                } else {
                    document.getElementById('myTextField').value = document.getElementById('myTextField').value.replace(' ' + this.value, '');
                }
            });
        }
    </script>
}