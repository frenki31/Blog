@model BeReal.ViewModels.CreatePostViewModel
@{
    ViewData["Title"] = "Edit Post";
}
@{
    await Html.RenderPartialAsync("_Navbar");
}
<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Post">Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Edit Post</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Post" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />
                <div class="row mb-2">
                    <div class="col-8">
                        <div class="mb-2">
                            <label>Title</label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Short Description</label>
                            <input asp-for="ShortDescription" type="text" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Category</label>
                            <input asp-for="Category" type="text" id="myTextField" class="form-control" readonly>
                            <label><input type="checkbox" class="myCheckbox" value="Sports">Sports</label>
                            <label><input type="checkbox" class="myCheckbox" value="Travel">Travel</label>
                            <label><input type="checkbox" class="myCheckbox" value="Lifestyle">Lifestyle</label>
                            <label><input type="checkbox" class="myCheckbox" value="Programming">Programming</label>
                        </div>
                        <div class="mb-2">
                            <label>Tags</label>
                            <input asp-for="Tags" type="text" class="form-control" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Description</label>
                            <textarea asp-for="Description" class="form-control" rows="8" id="editor"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            @{
                                if (Model.ImageUrl == null)
                                {
                                    <img src="~/images/default_image.png" class="img-fluid" id="thumbnail">
                                }else{
                                    <img src="~/images/@Model.ImageUrl" class="img-fluid" id="thumbnail">
                                }
                            }
                        </div>
                        <div class="mb-2">
                            <label>Image</label>
                            <input asp-for="Image" type="file" class="custom-file" />
                        </div>
                        <div class="mb-2">
                            <label>Document</label>
                            <input asp-for="File!.UploadedFile" type="file" />
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </form>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_Footer");
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('.custom-file').on('change', function () {
            var fileName = $(this).val().split('\\').pop();
            $(this).siblings('.custom-file-label').addClass('selected').html(fileName);
            document.getElementById("thumbnail").src = window.URL.createObjectURL(this.files[0])
        });

        window.onload = function () {
            var checkboxes = document.getElementsByClassName('myCheckbox');
            var textFieldValue = document.getElementById('myTextField').value;
            for (var i = 0; i < checkboxes.length; i++) {
                if (textFieldValue.includes(checkboxes[i].value)) {
                    checkboxes[i].checked = true;
                }
                checkboxes[i].addEventListener('change', function () {
                    if (this.checked) {
                        document.getElementById('myTextField').value += ' ' + this.value;
                    } else {
                        document.getElementById('myTextField').value = document.getElementById('myTextField').value.replace(' ' + this.value, '');
                    }
                });
            }
        }
    </script>
}