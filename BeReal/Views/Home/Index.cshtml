@model BeReal.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["Description"] = "A blogging website";
    ViewData["Keywords"] = "blog travel sports programming photography";
}
@{
    await Html.RenderPartialAsync("_Navbar");
    await Html.RenderPartialAsync("_HomeHeader");
}
<link href="~/css/styles.css" rel="stylesheet" />
<div class="container-fluid px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7 ">
            <form asp-controller="Home" asp-action="Index" class="form-horizontal m-auto">
                <div class="input-group input-group-sm">
                    <input asp-for="StartDate" class="date-picker form-control" placeholder="Start date"/>
                    <span class="input-group-text bg-secondary text-white">to</span>
                    <input asp-for="EndDate" class="date-picker form-control" placeholder="End date" />
                    <div class="input-group-inline">
                        <input type="submit" class="btn btn-outline-secondary" value="Search"/>
                    </div>
                </div>
            </form>
            <form asp-controller="Home" asp-action="Index" class="d-flex flex-row justify-content-center align-items-center flex-nowrap">
                <input asp-route-catergory="" type="submit" value="All" class="btn btn-default btn-small m-1" />
                <input asp-route-category="Programming" type="submit" value="Programming" class="btn btn-default btn-small m-1" />
                <input asp-route-category="Travel" type="submit" value="Travel" class="btn btn-default btn-small m-1" />
                <input asp-route-category="Sports" type="submit" value="Sports" class="btn btn-default btn-small m-1" />
                <input asp-route-category="Lifestyle" type="submit" value="Lifestyle" class="btn btn-default btn-small m-1" />
            </form>
            @foreach (var post in Model.Posts!)
            {
                <div class="post-preview">
                    <div class="row">
                        <div class="col-lg-7 col-md-12 d-flex justify-content-center flex-column">
                            <a asp-action="Post" asp-controller="Blog" asp-route-slug="@post.Slug">
                                <h2 class="post-title">@post.Title</h2>
                                <h4 class="post-subtitle">@post.ShortDescription</h4>
                            </a>
                            <p class="post-meta">
                                Posted by
                                <a asp-action="Profile" asp-controller="Home" asp-route-id="@post.ApplicationUser!.Id">@post.Author</a>
                                on @post.PublicationDate.ToString("dd-MM-yyyy")
                            </p>
                            <a asp-action="Post" asp-controller="Blog" asp-route-slug="@post.Slug">Read More...</a>

                            @if (post.Document != null)
                            {
                                <form method="post" asp-action="Download" asp-controller="Home" asp-route-id="@post.Document.IDBR_Document">
                                    <input type="submit" class="btn btn-primary" value="Download" />
                                </form>
                            }
                        </div>
                        <div class="col-lg-5 col-md-12 d-flex justify-content-end flex-column">
                            @{
                                string Image = post.Image == null ? "default_image.png" : post.Image;
                            }
                            <a asp-action="Post" asp-controller="Blog" asp-route-slug="@post.Slug">
                                <img class="img-fluid" src="~/images/@Image" />
                            </a>
                        </div>
                    </div>
                </div>
                <hr class="my-4" />
            }
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a aria-label="previous" class="btn btn-secondary" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-search="@Model.Search"
                               asp-route-start="@Model.StartDate" asp-route-end="@Model.EndDate" asp-route-page="@(Model.PageNumber-1)">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                    @foreach (var page in Model.Pages!)
                    {
                        if (page == -1)
                        {
                            <span class="btn btn-outline-secondary">...</span>
                        }
                        else
                        {
                            string active = page == Model.PageNumber ? "active" : "";
                            <li class="page-item @active">
                                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-search="@Model.Search"
                                   asp-route-start="@Model.StartDate.ToString("MMMM d, yyyy hh:mm tt")" asp-route-end="@Model.EndDate.ToString("MMMM d, yyyy hh:mm tt")" asp-route-page="@(page)">@(page)</a>
                            </li>
                        }
                    }
                    @if (Model.NextPage)
                    {
                        <li class="page-item">
                            <a class="btn btn-secondary" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-search="@Model.Search"
                               asp-route-start="@Model.StartDate" asp-route-end="@Model.EndDate" asp-route-page="@(Model.PageNumber+1)"><i class="fa-solid fa-chevron-right"></i></a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_Footer");
}